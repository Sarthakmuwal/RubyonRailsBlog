

  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  
    <%= stylesheet_link_tag "overall", "data-turbo-track": "reload" %>
 
  </head>

  <div class="signup">
  <h1>Create Account </h1>
  <div class="signupform">

  <%= form_with model: @user, url: sign_up_path do |form| %>
   
    <p><%= form.text_field :name, placeholder: true, format: :html%></p>
    <% @user.errors.full_messages_for(:name).each do |message| %>
      <p><%= message %></p>
    <% end %>
  
    <p><%= form.date_field :dob, placeholder: true%></p>
    <p><%= form.password_field :password, placeholder: true %></p>
    <p><%= form.password_field :password_confirmation, placeholder: true %></p>
     
    <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
      <p><%= message %></p>
    <% end %>
    <p><%= form.file_field :photo %></p>
    <span><%= form.check_box :admin_user%></span>
    Admin User?
    <p><%= form.submit "Sign Up"%>
  <% end %>
  <%= link_to "Already have an account?", login_path %>
  <div>
  </div>
