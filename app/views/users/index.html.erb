<table class="table">
  <thead>
    <tr>
      <th scope="col">Sno.</th>
      <th scope="col">Users</th>
      <th scope="col">Profile Details</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each_with_index do |user,index| %>
    <tr>
      <th scope="row"><%= index+1 %></th>
      <td><%= user.name %></td>
<td>

 Date of birth: <%= user.dob %><br>
 Admin user : <%=user.admin_user %><br>
Image: 
 <% if user.photo.present? %>
<%= image_tag @user.photo_url(:thumb) if @user.photo.present? %>
<% else %>
<%= image_tag "profile.png" , :style => "height: 20px;" %>
<% end %>

</td>
<td>
<%= link_to "Edit Profile", edit_user_path(user) %><br>
<% if Current.user.id!=user.id%>
<%= link_to "Delete Profile", user_path(user), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
} %>
<% end %><br>
</td>
    </tr>
 <% end %> 
  </tbody>
 
</table>